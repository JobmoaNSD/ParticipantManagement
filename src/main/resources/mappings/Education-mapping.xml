<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="EducationDAO">
    <!-- 교육내역 등록용 쿼리 -->
    <insert id="educationInsert">
        INSERT INTO J_참여자관리_직업훈련
        (구직번호, 직업훈련)
        <foreach collection="educations" item="data" separator="," open="VALUES">
            (
            #{educationJobNo},
            #{data}
            )
        </foreach>
    </insert>

    <!-- 교육내역 업데이트 용 쿼리 사용안하는 중 -->
    <update id="educationUpdate">
        UPDATE
            J_참여자관리_직업훈련
        SET
            직업훈련 = #{education}
        WHERE
            구직번호 = ${educationJobNo}
          AND
            직업훈련 = ${education}
    </update>

    <!-- 교육내역 삭제용 쿼리 외래키로 자동삭제 -->
    <delete id="educationDelete">
        DELETE
        FROM
            J_참여자관리_직업훈련
        WHERE
            구직번호 = ${educationJobNo}
    </delete>

    <!-- 참여자 교육내역 찾기용 -->
    <select id="educationSelectOne" resultType="education">
        SELECT
            직업훈련번호 AS educationNo,
            구직번호 AS educationJobNo,
            직업훈련 AS education
        From
            J_참여자관리_직업훈련
        WHERE
            구직번호=#{educationJobNo}
          AND
            직업훈련=#{education}
    </select>

    <!-- 참여자 전체 교육내역 확인용 쿼리 -->
    <select id="educationSelectALLOne" resultType="education">
        SELECT
            직업훈련번호 AS educationNo,
            구직번호 AS educationJobNo,
            직업훈련 AS education
        From
            J_참여자관리_직업훈련
        WHERE
            구직번호=#{educationJobNo}
    </select>
</mapper>