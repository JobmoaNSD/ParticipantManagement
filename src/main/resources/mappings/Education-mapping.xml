<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="EducationDAO">
    <!-- 교육내역 등록용 쿼리 -->
    <insert id="educationInsert">
        INSERT INTO J_EDUCATION
        (JOBNO, EDUCATION)
        VALUES
        <foreach collection="educations" item="data" separator=",">
            (
            #{educationJobNo},
            #{data}
            )
        </foreach>
    </insert>

    <!-- 교육내역 업데이트 용 쿼리 사용안하는 중 -->
    <update id="educationUpdate">
        UPDATE
            J_EDUCATION
        SET
            EDUCATION = #{education}
        WHERE
            JOBNO = ${educationJobNo}
          AND
            EDUCATION = ${education}
    </update>

    <!-- 교육내역 삭제용 쿼리 -->
    <delete id="educationDelete">
        DELETE
        FROM
            J_EDUCATION
        WHERE
            JOBNO = ${educationJobNo}
    </delete>

    <!-- 참여자 교육내역 찾기용 -->
    <select id="educationSelectOne" resultType="education">
        SELECT
            EDUCATIONNO AS educationNo,
            JOBNO AS educationJobNo,
            EDUCATION AS education
        From
            J_education
        WHERE
            JOBNO=#{educationJobNo}
          AND
            EDUCATION=#{education}
    </select>

    <!-- 참여자 전체 교육내역 확인용 쿼리 -->
    <select id="educationSelectALLOne" resultType="education">
        SELECT
            EDUCATIONNO AS educationNo,
            JOBNO AS educationJobNo,
            EDUCATION AS education
        From
            J_education
        WHERE
            JOBNO=#{educationJobNo}
    </select>
</mapper>