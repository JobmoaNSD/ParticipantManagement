<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ParticcertifDAO">

    <!-- 자격증 등록용 쿼리 -->
    <insert id="particcertifInsert">
        INSERT INTO J_PARTICCERTIF
        (JOBNO, CERTIF)
        VALUES
        <foreach collection="particcertifCertifs" item="data" separator=",">
            (
            #{particcertifJobNo},
            #{data}
            )
        </foreach>
    </insert>

    <!-- 자격증 업데이트 용 쿼리 사용안하는 중 -->
    <update id="particcertifUpdate">
        UPDATE
        J_PARTICCERTIF
        SET
            CERTIF = #{particcertifCertif}
        WHERE
            JOBNO = ${particcertifJobNo}
          AND
            CERTIF = ${particcertifCertif}
    </update>

    <!-- 자격증 삭제용 쿼리 -->
    <delete id="particcertifDelete">
        DELETE
        FROM
            J_PARTICCERTIF
        WHERE
            JOBNO = ${particcertifJobNo}
    </delete>

    <!-- 참여자 자격증 찾기용 -->
    <select id="particcertifSelectOne" resultType="particcertif">
        SELECT
            PARTNO AS particcertifPartNo,
            JOBNO AS particcertifJobNo,
            CERTIF AS particcertifCertif
        From
            J_PARTICCERTIF
        WHERE
            JOBNO=#{particcertifJobNo}
        AND
            CERTIF=#{particcertifCertif}
    </select>

    <!-- 참여자 전체 자격증 확인용 쿼리 -->
    <select id="particcertifSelectALLParticOne" resultType="particcertif">
        SELECT
            PARTNO AS particcertifPartNo,
            JOBNO AS particcertifJobNo,
            CERTIF AS particcertifCertif
        From
            J_PARTICCERTIF
        WHERE
            JOBNO=#{particcertifJobNo}
    </select>

</mapper>